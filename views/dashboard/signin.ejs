<% extend('../layouts/layout.ejs') %>
<div class="main container-fluid my-5">
    <div class="row justify-content-center">
      <div class="col-sm-6">
          <% if(signinResult){ %>
            <div class="alert alert-danger" role="alert">
              <strong><%- signinResult %></strong>
            </div>
          <% } %>
        <form method="POST" action="/auth/signinIng">
          <input type="hidden" name="_csrf" value="<%- csrfToken %>">
          <div class="form-group">
            <label for="exampleInputEmail1">Email</label>
            <input type="email" class="form-control" id="exampleInputEmail1" name="email" aria-describedby="emailHelp" placeholder="請輸入 email"
              required>
            <!-- <small id="emailHelp" class="form-text text-muted">我們不會隨意散佈你的 Email</small> -->
          </div>
          <div class="form-group">
            <label for="password">密碼</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="請輸入密碼" required>
          </div>
            <a class="btn text-primary p-0" >忘記密碼?</a>
          <div class="text-right mt-3">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </form>
      </div>
    </div>


  </div>